  <!--新規投稿フォーム-->
  <h2 class="mt-3">New book</h2>
    <%= form_with model: book, local:true do |f| %>
    
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class:"form-control book_title" %>
      </div>
      
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class:"form-control book_opinion" %>
      </div>
      
      <div class="form-group">
        <label for="book_category">Category</label>
        <%= f.text_field :category, class:"form-control book_category" %>
      </div>
      
      <div class="form-group" id="star">
          <%= f.label :rate %>
          <%= f.hidden_field :rate, id: :review_star, class:'form-control' %>
        </div>
      
        <script>
        $('#star').raty({
          size     : 20,
          starOff:  '<%= asset_path('star-off.png') %>',
          starOn : '<%= asset_path('star-on.png') %>',
          starHalf: '<%= asset_path('star-half.png') %>',
          scoreName: 'book[rate]',
          half: true,
        });
        </script>

        <%= f.submit 'Create Book', class:"btn btn-secondary  bg-success text-white" %>

    <% end %>